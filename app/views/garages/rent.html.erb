<h1 class="header" style="text-align: center; margin: 10px"> Garage Rental</h1>
<hr/>
<h2 style="color: blue; text-align: center;"> GP <%= @garage.garage_number %>  </h2> 
<div class="center_me" style="text-align: center">
        <section> 
            <span> Event: </span>
            <span> <%= @garage.event.event_name %></span>
        </section>
         <section> 
            <span> Date: </span>
            <span> <%= @garage.event.date %></span>
        </section>
    
    <card class="form">
    <form method="post" action="/" enctype="multipart/form-data">
        <section> 
            <label class="block" for="location_name">Friday</label>
            <input class="block" type="text" name="location_name" id="location_name">
        </section>
        <section> 
            <label class="block" for="start_date">Saturday</label>
            <input class="block" type="text" name="start_date" id="start_date">
        </section>
        <section> 
            <label class="block" for="end_date">Sunday</label>
            <input class="block" type="text" name="end_date" id="end_date">
        </section>
        <section class="block" style="text-align: center;">
        <button class="btn btn-primary" type="submit" style="width: 50%; margin-top: 20px; padding: 5px;">Rent Garage</button>
        </section>
    </form>
    </card>
</div>