<%= form_for :user, url: login_path  do |f| %>
<% flash.each do |name, msg| %>
  <div class='alert alert-<%= name %>'>
    <%= msg %>
  </div>

<%end%>
  <div class='field'>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class='field'>
    <%= f.submit "Sign In" %>
  </div>
<% end %>
<a href='/auth/google_oauth2'>Login with Google</a>